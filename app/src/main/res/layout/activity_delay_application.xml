<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saiyi.smartkeycabinetclient.key.ui.ApplicationKeyFragment">

    <TextView
        android:id="@+id/choose_key_tv"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:textColor="#004BB1"
        android:textSize="14dp"
        android:text="XX钥匙柜/17号"/>

    <RelativeLayout
        android:id="@+id/end_time_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="延时结束时间"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/nav_end_line"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/reason_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="延时原因"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply_reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="延时原因"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/feed_back_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入延时原因"
            android:textColor="@color/normal_text_color"
            android:textColorHint="@color/select_text_hint_color"
            android:textSize="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/select_approval_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="指定审批人"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/approvel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:enabled="false"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_btn"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>
