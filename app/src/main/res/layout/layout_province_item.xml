<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MorePageTableLayout_Favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_line_id"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/nav_end_line"
        android:visibility="gone"/>

    <View
        android:id="@+id/left_line_id"
        android:layout_width="3dp"
        android:layout_height="49.5dp"
        android:background="@color/menu_update_device_bg"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="49.5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/select_text_hint_color"
            android:textSize="14sp"
            />
    </LinearLayout>

    <View
        android:id="@+id/right_line_id"
        android:layout_width="0.5dp"
        android:layout_height="49.5dp"
        android:layout_alignParentRight="true"
        android:background="@color/nav_end_line" />

</RelativeLayout>