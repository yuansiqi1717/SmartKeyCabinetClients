<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kb_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.saiyi.smartkeycabinetclient.key.ui.ApplicationKeyFragment">

    <com.lib.fast.common.activity.view.NavBar
        android:id="@+id/title_nb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:layout_alignParentTop="true"
        app:backgroundColor="@color/nav_bgcolor"
        app:showTitle="true"/>

    <RelativeLayout
        android:id="@+id/select_key_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="选择钥匙柜"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_cabinet_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_time_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/nav_end_line"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/end_time_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/nav_end_line"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/reason_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="申请原因"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply_reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="申请原因"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/feed_back_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/select_text_hint_color"
            android:textColor="@color/normal_text_color"
            android:textSize="15dp"
            android:background="@null"
            android:hint="申请原因和要去的地点"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/nav_end_line"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/destination_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="目的地"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/destination_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="邀请申请人"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:background="@color/nav_end_line"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/select_approval_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/required" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="指定审批人"
                android:textColor="@color/normal_text_color"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/approvel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请选择"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/select_text_hint_color"
                android:textSize="@dimen/text_middle" />

            <View
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/next"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/shape_login_btn"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="提交"/>

</LinearLayout>
